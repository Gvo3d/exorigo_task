<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="creation" author="dyakimov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles" />
            </not>
            <not>
                <tableExists tableName="phones" />
            </not>
            <not>
                <tableExists tableName="users" />
            </not>
            <not>
                <tableExists tableName="phones_users" />
            </not>
        </preConditions>

        <createTable tableName="roles">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rolename" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="phones">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="phonenum" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_authorities_users" references="roles(id)"/>
            </column>
            <column name="enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="phones_users">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_us_to_ph" references="users(id)"/>
            </column>
            <column name="phone_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_ph_to_us"
                             references="phones(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="dataFill" author="dyakimov">
        <insert tableName="roles">
            <column name="rolename" value="USER"/>
        </insert>
        <insert tableName="roles">
            <column name="rolename" value="ADMIN"/>

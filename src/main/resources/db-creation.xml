            <column name="user_id" valueComputed="(SELECT id from users where name='name1')"/>
        </insert>
        <insert tableName="phones_users">
            <column name="phone_id" valueComputed="(SELECT id from phones where phonenum='323456')"/>
            <column name="user_id" valueComputed="(SELECT id from users where name='name2')"/>
        </insert>

            <column name="login" value="login3"/>
            <column name="password" value="pass3"/>
            <column name="role_id" valueComputed="(SELECT id from roles where rolename='USER')"/>
            <column name="enabled" value="true"/>
        </insert>
        <insert tableName="users">
            <column name="name" value="name4"/>
            <column name="surname" value="surname4"/>
            <column name="login" value="login4"/>
            <column name="password" value="pass4"/>
            <column name="role_id" valueComputed="(SELECT id from roles where rolename='ADMIN')"/>
            <column name="enabled" value="true"/>
